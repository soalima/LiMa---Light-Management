<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_principal"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.proyecto.limas11.activities.ComunicationActivity"
android:theme="@style/AppTheme">

    <Switch
        android:id="@+id/switchLuz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="90dp"
        android:checked="false"
        android:text="Seleccionada"
        android:textOff="NO"
        android:textOn="SI" />

    <TextView
        android:id="@+id/textViewLuz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="139dp"
        android:text="Luz 2:" />

    <EditText
        android:id="@+id/txtValorPotenciometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnApagar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:fontFamily="serif"
        android:freezesText="false"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="50sp"
        android:textStyle="normal|bold"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

<Button
    android:text="Apagar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginStart="50dp"
    android:id="@+id/btnApagar"
    android:layout_marginBottom="142dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnEncender"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="142dp"
        android:layout_toEndOf="@+id/btnApagar"
        android:layout_toRightOf="@+id/btnApagar"
        android:text="Encender"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewLuz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="Luz 1:" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="246dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="CUALQUIER ACCION EN ESTA ACTIVITY SOLO SE APLICARA A LA LUZ SELECCIONADA EXCEPTO EL MODO ALARMA"
        android:visibility="invisible" />

    <Switch
        android:id="@+id/switchLuz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="90dp"
        android:checked="false"
        android:text="Seleccionada"
        android:textOff="NO"
        android:textOn="SI" />

    <Switch
        android:id="@+id/swLinterna"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="105dp"
        android:text="Linterna" />

</RelativeLayout>
